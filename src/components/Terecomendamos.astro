---
import Svg from "@/reusable/Svg.astro";
import {data} from "../mock/data"

const {WeRecomendYou } = data
---

<section class="g_maxwith mx-auto" id="container">
    <div class="g_div_titlesection">
        <h1>Te recomendamos</h1>
       <Svg/>
    </div>
    <div class="flex flex-wrap justify-center">
        {
            WeRecomendYou.map((e) => {
                return (
                    <div class="flex flex-col  ">
                        <a class="relative g_a_images_p">
                            <img src={e.img} alt="" />
                            <p>{e.discount}%</p>
                        </a>
                        <div class=" g_titlegame_price">
                            <p class="px-4 g_p_titlesgames">{e.title}</p>
                            <p class="px-4 g_gameprices">${e.price}</p>
                        </div>
                    </div>
                );
            })
        }
    </div>
</section>